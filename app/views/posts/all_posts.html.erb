<div class="container img-responsive" style="font-family: Verdana, Geneva, sans-serif;
                                    background-image: url('http://maxpixel.freegreatpicture.com/static/photo/1x/Feminine-Desktop-Notebook-Blog-Mockup-White-2325627.jpg');
                                    background-size: cover;
                                    background-repeat: no-repeat;
                                    background-position: center;
                                    height: 70em;
                                    width: 100%;">

    <h2 style="text-align: center;">Featured Posts</h2>
    <br>
    <div class="text-center">
      <%= link_to 'Home', root_path, class: 'btn btn-primary' %>
    </div>

    <br>


          <% @posts.order(updated_at: :desc).each do |post| %>

            <div class="col-lg-3 col-md-4 col-sm-8 col-xs-10">
              <div class="thumbnail" style="height: 242px; width: 300px;">

                <div class="text-center">
                  <h4><%= post.title %></h4>
                  <p>Last updated by: <%= post.author %>
                    <%= time_ago_in_words(post.updated_at, include_seconds: true) %> ago
                  </p>
                </div>

                  <ol>
                    <li><%= post.entry_1 %></li>
                    <li><%= post.entry_2 %></li>
                    <li><%= post.entry_3 %></li>
                  </ol>

                  <div class="all-posts">
                    <%= link_to 'Show', post, class: 'btn btn-info' %>
                    <% if current_user.name == post.author %>
                      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %>
                      <%= link_to 'Destroy', post, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
                    <% else %>
                      <!-- disabled with jQuery in application.js -->
                      <%= link_to 'Edit', all_posts_path, class: 'btn btn-warning', disabled: true %>
                      <%= link_to 'Destroy', all_posts_path, class: 'btn btn-danger', disabled: true %>
                      <%#= button_to 'Edit', edit_post_path(post), class: 'btn btn-warning', disabled: true %>
                      <%#= button_to 'Destroy', post, class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' }, disabled: true %>
                    <% end %>
                  </div><!-- all-posts -->

                </div><!-- thumbnail -->
            </div><!-- col-md-3 -->
          <% end %>

      </div><!-- row -->

  </div><!-- container-fluid -->